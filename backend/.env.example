# K-Laboratory Backend Configuration
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION
# ===========================================
APP_NAME="K-Laboratory Platform"
DEBUG=false
SECRET_KEY=your-super-secret-key-change-this
JWT_SECRET_KEY=your-jwt-secret-key-change-this

# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
DATABASE_URL=postgresql+asyncpg://klab:your_db_password@localhost:5432/klab
DB_PASSWORD=your_db_password

# ===========================================
# REDIS (Cache & Sessions)
# ===========================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ===========================================
# BLUEOS (ROV Integration)
# ===========================================
# IP address of BlueOS companion computer
BLUEOS_HOST=192.168.2.2
BLUEOS_PORT=80
BLUEOS_MAVLINK_PORT=14550
BLUEOS_VIDEO_PORT=5600

# ===========================================
# STRIPE (E-commerce Payments)
# ===========================================
# Get keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
SHOP_CURRENCY=USD

# ===========================================
# REVOLUT BUSINESS (Webhook Integration)
# ===========================================
# Get from Revolut Business API settings
# https://business.revolut.com/settings/api
REVOLUT_SIGNING_SECRET=your_revolut_webhook_secret
REVOLUT_WEBHOOK_ENABLED=true

# ===========================================
# TELEGRAM (Notifications)
# ===========================================
# Create bot via @BotFather, get token
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
# Get chat ID via @userinfobot or API
TELEGRAM_CHAT_ID=-100123456789
TELEGRAM_NOTIFICATIONS_ENABLED=true

# ===========================================
# MONITORING (Optional)
# ===========================================
GRAFANA_PASSWORD=admin
